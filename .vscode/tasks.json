{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"close": false
			},
			"problemMatcher": []
		},
		{
			"label": "Update Version (Node)",
			"type": "shell",
			"command": "node task-build.js",
			"group": {
				"kind": "build"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"close": false
			}
		},
		{
			"label": "SCSS Compile (Node)",
			"type": "shell",
			"command": "node task-compile-sass.js",
			"group": {
				"kind": "build"
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"revealProblems": "onProblem",
				"panel": "shared",
				"showReuseMessage": false,
				"clear": true,
				"close": false
			}
		}
	]
}
